<% provide(:title, @user.name) %>

<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>時間管理表</td>
      <td colspan="3" class="table-active">指定勤務時間：<%= (@user.work_time) %></td>
      <td>基本時間：<%= (@user.basic_time) %></td>
      <td>月初日<%= @first_day %></td>
    </tr>
    
    <tr>
      <td>所属<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数</td>
      <td>月初日<%= @last_day %></td>
    </tr>
  </table>
</div>

<div class="btn-edit-attendances">
  <%= link_to "勤怠を編集", '#', class: "btn btn-default" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>        
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% (@first_day..@last_day).each do |day| %>
        <tr>
          <td><%= day %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>